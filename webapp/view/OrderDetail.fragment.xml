<core:FragmentDefinition xmlns="sap.m" xmlns:core="sap.ui.core">
    <Dialog id="orderDetailsDialog" title="Order Details" draggable="true" resizable="true">
        <VBox class="sapUiSmallMargin">
            <Text text="Order ID: {/OrderID}" />
            <Text text="Customer ID: {CustomerID}" />
            <Text text="Employee ID: {EmployeeID}" />
            <Text text="Order Date: { path: 'OrderDate', type: 'sap.ui.model.type.Date', formatOptions: { style: 'medium' } }" />
            <Text text="Ship City: {ShipCity}" />
        </VBox>
        <beginButton>
            <Button text="Close" press="onCancelOrderDetailDialog" />
        </beginButton>
    </Dialog>
</core:FragmentDefinition>
