<mvc:View
    controllerName="sap.ui.demo.walkthrough.project1.controller.WorkFlow"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns:tnt="sap.tnt"
    xmlns:m="sap.m"
    displayBlock="true"
    xmlns:f="sap.f"
>
<Page>
    <ScrollContainer
                id="mainScrollContainer"
                height="100%"
                width="100%"
                vertical="true"
                class="customScrollContainer"
            >
                <VBox class="sapUiSmallMargin">
                    <Panel
                        headerText="Welcome Aditi!"
                        class="sapUiSmallMarginEnd"
                    >
                        <VBox>
                            <Text text="You have 5 new orders today." />
                            <Toolbar>
                                <Button
                                    text="Get Started"
                                    type="Emphasized"
                                    press="onGetStartedPress"
                                />

                                <Button
                                    text="Show Table Dialog"
                                    type="Emphasized"
                                    press="onShowTableDialogPress"
                                />
                                <ToolbarSpacer />
                                <Button
                                    text="Show Details"
                                    icon="sap-icon://add"
                                    press="showDetails"
                                    type="Emphasized"
                                />
                            </Toolbar>
                        </VBox>
                    </Panel>

                    <HBox>
                        <GenericTile
                            header="Orders"
                            subheader="Total"
                            class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout kpiWidthHeight"
                        >
                            <TileContent class="kpiInsideHeight">
                                <NumericContent value="1245" />
                            </TileContent>
                        </GenericTile>

                        <GenericTile
                            header="Revenue"
                            subheader="Today"
                            class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout kpiWidthHeight"
                        >
                            <TileContent class="kpiInsideHeight">
                                <NumericContent
                                    value="8.5"
                                    scale="K"
                                />
                            </TileContent>
                        </GenericTile>

                        <GenericTile
                            header="Profit"
                            subheader="Today"
                            class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout kpiWidthHeight"
                        >
                            <TileContent class="kpiInsideHeight">
                                <NumericContent
                                    value="80.5"
                                    scale="K"
                                />
                            </TileContent>
                        </GenericTile>
                    </HBox>
                    <Panel
                        headerText="Order List"
                        class="sapUiSmallMargin"
                    >
                        <VBox class="sapUiContentPadding orderListBox">
                            <core:Fragment
                                fragmentName="sap.ui.demo.walkthrough.project1.view.ShowTable"
                                type="XML"
                            />
                        </VBox>
                    </Panel>
                </VBox>
            </ScrollContainer>
</Page>
</mvc:View>