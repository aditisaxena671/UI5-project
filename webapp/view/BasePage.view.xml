<mvc:View
    controllerName="sap.ui.demo.walkthrough.project1.controller.BasePage"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:form="sap.ui.layout.form"
    xmlns:tnt="sap.tnt"
    xmlns:m="sap.m"
    displayBlock="true"
    xmlns:f="sap.f"
>
    <tnt:ToolPage id="mainToolPage">
        <tnt:header>
            <tnt:ToolHeader>
                <m:Text text="My Dashboard" />
                <f:Avatar initials="AD" />
            </tnt:ToolHeader>
        </tnt:header>
        <tnt:sideContent>
            <tnt:SideNavigation>
                <tnt:NavigationList>
                    <tnt:NavigationListItem
                        text="Dashboard"
                        icon="sap-icon://home"
                    />
                    <tnt:NavigationListItem
                        text="Orders"
                        icon="sap-icon://cart"
                    />
                    <tnt:NavigationListItem
                        text="Customers"
                        icon="sap-icon://customer"
                    />
                    <tnt:NavigationListItem
                        text="Reports"
                        icon="sap-icon://pie-chart"
                    />
                </tnt:NavigationList>
            </tnt:SideNavigation>
        </tnt:sideContent>
        <tnt:mainContents >
        <ScrollContainer 
        id="mainScrollContainer"
        height="100%" 
        width="100%"
        vertical="true"
        class="customScrollContainer"
    >
            <VBox class="sapUiSmallMargin">
                <Panel
                    headerText="Welcome Aditi!"
                    class="sapUiSmallMarginEnd"
                >
                    <VBox>
                        <Text text="You have 5 new orders today." />
                        <Toolbar >
<Button
                            text="Get Started"
                            type="Emphasized"
                            press="onGetStartedPress"
                        />
                        
                        <Button
                            text="Show Table Dialog"
                            type="Emphasized"
                            press="onShowTableDialogPress"
                        />
                            <ToolbarSpacer ></ToolbarSpacer>
                            <Button text="Show Details" icon="sap-icon://add"  press="showDetails" type="Emphasized"  />
                    
                        </Toolbar>
                        
                        </VBox>
                </Panel>

                <HBox>
                    <GenericTile
                        header="Orders"
                        subheader="Total"
                        class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout kpiWidthHeight"
                    >
                        <TileContent class="kpiInsideHeight">
                            <NumericContent value="1245" />
                        </TileContent>
                    </GenericTile>

                    <GenericTile
                        header="Revenue"
                        subheader="Today"
                        class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout kpiWidthHeight"
                    >
                        <TileContent class="kpiInsideHeight">
                            <NumericContent
                                value="8.5"
                                scale="K"
                            />
                        </TileContent>
                    </GenericTile>

                    <GenericTile
                        header="Profit"
                        subheader="Today"
                        class="sapUiTinyMarginBegin sapUiTinyMarginTop tileLayout kpiWidthHeight"
                    >
                        <TileContent class="kpiInsideHeight">
                            <NumericContent
                                value="80.5"
                                scale="K"
                            />
                        </TileContent>
                    </GenericTile>
                </HBox>
                <Panel
                    headerText="Order List"
                    class="sapUiSmallMargin"
                >
                    <VBox class="sapUiContentPadding orderListBox">
                        <Table
                            id="ordersTable"
                            items="{oOrdersJsonModel>/orders}"
                            width="100%"
                            growing="false"
                            inset="false"
                            busyIndicatorDelay="0"
                            busy="false"
                            mode="SingleSelectLeft"
                        >
                            <columns>
                                <Column>
                                    <Text text="Order ID" />
                                </Column>
                                <Column>
                                    <Text text="Customer" />
                                </Column>
                                <Column>
                                    <Text text="Order Date" />
                                </Column>
                                <Column>
                                    <Text text="Address" />
                                </Column>
                                <Column>
                                    <Text text="ShipCity" />
                                </Column>
                            </columns>

                            <items>
                                <ColumnListItem>
                                    <cells>
                                        <Text text="{oOrdersJsonModel>OrderID}" />
                                        <Text text="{oOrdersJsonModel>CustomerID}" />
                                        <Text text="{oOrdersJsonModel>OrderDate}" />
                                        <Text text="{oOrdersJsonModel>ShipAddress}" />
                                        <Text text="{orderModel>ShipCity}" />
                                    </cells>
                                </ColumnListItem>
                            </items>
                        </Table>
                    </VBox>
                </Panel>
            </VBox>
            </ScrollContainer>
        </tnt:mainContents>
    </tnt:ToolPage>
</mvc:View>